<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/folder"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/FavoriteItem">

    <FrameLayout style="@style/FavoriteItemIconContainer">

        <ImageView
            android:id="@+id/folder_bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:duplicateParentState="true"
            android:gravity="center"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/folder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="@dimen/favorite_grid_item_notification_size"
            android:layout_height="@dimen/favorite_grid_item_notification_size"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/favorite_grid_item_notification_margin"
            android:layout_marginTop="@dimen/favorite_grid_item_notification_margin"
            android:src="@drawable/notification"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        style="@style/FavoriteItemLabel" />

</LinearLayout>