<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/folder"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/FavoriteItem">

    <FrameLayout
        style="@style/FavoriteItemIconContainer"
        android:foreground="@drawable/favorite_grid_folder_tint" >

        <ImageView
            android:id="@+id/folder_bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="fitXY" />

        <FrameLayout
            android:id="@+id/folder_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/folder_preview_padding" />
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        style="@style/FavoriteItemLabel" />

</LinearLayout>